<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/image_lib"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/allBooks"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="See All Books"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appName" />

        <Button
            android:id="@+id/favoriteBooks"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Your Favorite Books"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@+id/toReadBooks"
            app:layout_constraintStart_toStartOf="@+id/toReadBooks"
            app:layout_constraintTop_toBottomOf="@+id/toReadBooks" />

        <Button
            android:id="@+id/toReadBooks"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Books To Read"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@+id/currentlyReadingBooks"
            app:layout_constraintStart_toStartOf="@+id/currentlyReadingBooks"
            app:layout_constraintTop_toBottomOf="@+id/currentlyReadingBooks" />

        <Button
            android:id="@+id/aboutPage"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="About"
            app:layout_constraintEnd_toEndOf="@+id/alreadyReadBooks"
            app:layout_constraintStart_toStartOf="@+id/alreadyReadBooks"
            app:layout_constraintTop_toBottomOf="@+id/alreadyReadBooks" />

        <Button
            android:id="@+id/currentlyReadingBooks"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Books You Currently Reading"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@+id/allBooks"
            app:layout_constraintStart_toStartOf="@+id/allBooks"
            app:layout_constraintTop_toBottomOf="@+id/allBooks" />

        <Button
            android:id="@+id/alreadyReadBooks"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Books You Already Read"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@+id/favoriteBooks"
            app:layout_constraintStart_toStartOf="@+id/favoriteBooks"
            app:layout_constraintTop_toBottomOf="@+id/favoriteBooks" />

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/audiowide"
            android:text="MyLibrary"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/licenceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="This app is created by Arthur handsomeandi. Very cool"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@+id/aboutPage"
            app:layout_constraintStart_toStartOf="@+id/aboutPage"
            app:layout_constraintTop_toBottomOf="@+id/aboutPage"
            android:paddingBottom="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

